var nome=prompt("Qual o seu nome");""===nome||null===nome?alert("Por favor atualize é digite seu nome"):alert("Boa sorte  "+nome+" ao Clicar em OK o Jogo Começara ");const cards=document.querySelectorAll(".card");let hasFlippedCard=!1,firstCard,secondCard,lockBoard=!1;function flipCard(){if(!lockBoard&&this!==firstCard){if(this.classList.add("flip"),!hasFlippedCard)return hasFlippedCard=!0,void(firstCard=this);secondCard=this,hasFlippedCard=!1,checkForMatch()}}function checkForMatch(){(firstCard.dataset.card!==secondCard.dataset.card?unflipCards:disableCards)()}function disableCards(){firstCard.removeEventListener("click",flipCard),secondCard.removeEventListener("click",flipCard),resetBoard()}function unflipCards(){lockBoard=!0,setTimeout(()=>{firstCard.classList.remove("flip"),secondCard.classList.remove("flip"),resetBoard()},1500)}function resetBoard(){[hasFlippedCard,lockBoard]=[!1,!1],[firstCard,secondCard]=[null,null]}cards.forEach(r=>{var a=Math.floor(12*Math.random());r.style.order=a}),cards.forEach(r=>{r.addEventListener("click",flipCard)}),document.getElementById("myButton").addEventListener("click",function(){location.reload()});



